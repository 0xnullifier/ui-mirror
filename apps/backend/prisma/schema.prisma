generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  VERIFIED
  REJECTED
}

model Custodian {
  id                      Int              @id @default(autoincrement())
  name                    String
  logo                    String
  backendurl              String
  apiKey                  String
  liabilitiesZkAppAddress String           @default("")
  assetsZkAppAddress      String           @default("")
  posZkAppAddress         String           @default("")
  ProofAnalytics          ProofAnalytics[]
}

model ProofAnalytics {
  id                         Int       @id @default(autoincrement())
  custodianId                Int
  custodian                  Custodian @relation(fields: [custodianId], references: [id])
  proofsVerified             Int
  lastProofVerifiedTimestamp DateTime
  proofDownload              String
  status                     Status
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  OTP   OTP[]
}

model OTP {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  otp       String
  createdAt DateTime @default(now())
}
